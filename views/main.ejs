<div style="margin: 20px 20px 20px 40px">
    <h3>My Todo List</h3>
</div>

<div style="margin: 20px 20px 20px 40px">
    <table class="table table-striped" >
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        <%todos.forEach(todo=>{%>
            <tr>
                <td><%=todo.itemName%></td>
                <td><%=todo.itemCategory%></td>
                <td><%=todo.date%></td>
                <td>
                    <a href="/editItem/<%=todo._id%>"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                    <a href="/deleteItem/<%=todo._id%>" onclick="return confirm('Are you sure want to delete this item?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                </td>
            </tr>
        <%})%>
        </tbody>
    </table>
</div>

<div style="height: 250px; background-color: rgb(187, 194, 197); margin: 0 20px 0 40px;">
    <form method="POST" action="<%=ACTION%>" class="mx-5 my-2" style="width: 30%;">
        <div class="form-group">
            <label for="itemName" class="form-label mt-2">Item Name</label>
            <input type="text" class="form-control" id="itemName" name="itemName" value="<%=todoItem.itemName%>">
        </div>
        <div class="form-group">
            <label class="form-label">Item Category</label>
            <input type="text" class="form-control" name="itemCategory" value="<%=todoItem.itemCategory%>">
        </div>
        <div class="form-group">
            <input type="submit" value="Add Item">
        </div>
    </form>
</div>
